<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6C9B9F"
    tools:context="com.example.caroljardims.spotfood.GetPermissions"
    android:weightSum="1">


    <Button
        android:id="@+id/getPermission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="getPermission"
        android:text="Pegar minha localização!"
        android:textAllCaps="false"
        android:backgroundTint="#BF233D"
        android:textColor="#FFF"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="151dp"
        android:src="@drawable/foodtruck" />

</LinearLayout>
